@using Microsoft.AspNetCore.Identity;
@using SocialNetApp.Data.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<div class="auth-buttons">
    <!-- Добавим ml-auto для выравнивания вправо -->
    @if (SignInManager.IsSignedIn(User))
    {
        <a class="welcome-text" asp-controller="AccountManager" asp-action="MyPage">@User.Identity?.Name</a>
        <form asp-controller="AccountManager" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
            <button type="submit" class="btn auth-btn">Logout</button>
        </form>
    }
    else
    {
        <a class="btn auth-btn" asp-controller="Register" asp-action="RegisterPart2">Регистрация</a>
        <a class="btn auth-btn" asp-area="Identity" asp-page="/Account/Login">Вход</a>
    }
</div>